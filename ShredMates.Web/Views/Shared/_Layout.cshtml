<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] ShredMates</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <a class="navbar-brand" href="/">OnlineShop</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">@await Component.InvokeAsync("Snowboard")</li>
                <li class="nav-item">@await Component.InvokeAsync("Splitboard")</li>
                <li class="nav-item">@await Component.InvokeAsync("Ski")</li>
                <li class="nav-item">@await Component.InvokeAsync("Wakeboard")</li>
                <li class="nav-item">@await Component.InvokeAsync("Kitesurf")</li>
                <li class="nav-item">@await Component.InvokeAsync("ShoppingCart")</li>
                <li class="nav-item"><a asp-controller="Brands" asp-action="Index">Brands</a></li>
                <li class="nav-item"><a asp-controller="Home" asp-action="Contact">Contact us</a></li>
                <li class="nav-item"><a asp-controller="Home" asp-action="About">About</a></li>
                <partial name="_LoginPartial" />  <!--login/register-->
            </ul>
        </div>
    </nav>
    <!--nav admin section -->
    @if (User.Identity.IsAuthenticated && User.IsInRole(WebConstants.AdminRole))
    {
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <a class="navbar-brand" href="/">Admin</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item"><a asp-area="Admin" asp-controller="AdminCategories" asp-action="Create">Create Category</a></li>
                    <li class="nav-item"><a asp-area="Admin" asp-controller="AdminProducts" asp-action="Create">Create Product</a></li>
                    <li class="nav-item"><a asp-area="Admin" asp-controller="AdminUsers" asp-action="Index">Users</a></li>
                </ul>
            </div>
        </nav>
    }

    <div class="container body-content">
        @if (TempData.ContainsKey(WebConstants.SuccessMessage))
        {
            <div class="alert alert-success">
                @TempData[WebConstants.SuccessMessage]
            </div>
        }
        @if (TempData.ContainsKey(WebConstants.ErrorMessage))
        {
            <div class="alert alert-danger">
                @TempData[WebConstants.ErrorMessage]
            </div>
        }
        @if (TempData.ContainsKey(WebConstants.WarningMessage))
        {
            <div class="alert alert-warning">
                @TempData[WebConstants.WarningMessage]
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2020 ShredMates</p>
        </footer>
    </div>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/lib/font-awesome/js/all.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>