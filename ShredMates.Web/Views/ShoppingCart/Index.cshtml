@model ShoppingCartViewModel
@{
    ViewData["Title"] = "Your shopping cart";
}

<h2>@ViewData["Title"]</h2>

<div class="row checkoutForm">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Selected amount</th>
                <th>Product</th>
                <th class="text-right">Price</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
            {
                <tr>
                    <td class="text-center">@item.Amount</td>
                    <td class="text-left">@item.Product.Title</td>
                    <td class="text-right">@item.Product.Price.ToString("c")</td>
                    <td class="text-right">
                        @((item.Amount * item.Product.Price).ToString("c"))
                    </td>
                    <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="ShoppingCart" asp-action="RemoveFromCart" asp-route-drinkId="@item.Product.Id"></a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.ShoppingCartTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group ">
            <div class="btn btn-success" asp-controller="Order" asp-action="Checkout">Check out</div>
            <div class="btn-group">
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Shop more<span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a asp-controller="Home" asp-action="Index" asp-route-category=""></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>